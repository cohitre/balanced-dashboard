{{#if view.isDescription}}
	{{#if view.hasDescription}}
		{{view.model.description}}
	{{else}}
		<span class="sl-none">none</span>
	{{/if}}
{{else}}
	{{#if view.model}}
		{{#if view.model.route_name}}
			{{#link-to view.model.route_name view.model title=view.hoverValue}}
				{{view.value}}
			{{/link-to}}
		{{/if}}
		{{#if view.model.routeName}}
			{{#link-to view.model.routeName view.model title=view.hoverValue}}
				{{view.value}}
			{{/link-to}}
		{{/if}}
	{{else}}
		<span class="sl-none">none</span>
	{{/if}}
{{/if}}
