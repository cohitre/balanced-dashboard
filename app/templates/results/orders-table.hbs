<thead>
	<tr>
		<th class="col-md-5 has-filter"><span>Order</span></th>
		<th class="col-md-2 num"><span>Order balance</span></th>
	</tr>
</thead>
{{#if view.loader.results.hasNextPage}}
	{{view "results/results-load-more" results=view.loader.results columns=view.colspan}}
{{/if}}

<tbody>
	{{#each order in view.loader.results}}
		{{view "results/grouped-order-row" item=order embedded=true hideFromColumn=true hideToColumn=true}}
	{{else}}
		<tr>
			<td colspan="2" class="no-results">
				{{#if view.loader.results.isLoaded}}
					No orders
				{{else}}
					Loading...
				{{/if}}
			</td>
		</tr>
	{{/each}}
</tbody>
