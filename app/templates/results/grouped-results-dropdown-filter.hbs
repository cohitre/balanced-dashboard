<a href="#" {{bind-attr class=":dropdown-toggle view.isSelected:active"}} data-toggle="dropdown">
	<span>{{view.toggleText}}</span>
	<b class="caret"></b>
</a>
<ul class="dropdown-menu type-filter filter-choices">
	{{#each filterGroup in view.filterGroups}}
		<li class="group">
			<h4 class="sl-sm-sb">{{filterGroup.groupLabelText}}</h4>
			<ul>
				{{#each filterLink in filterGroup.filters}}
					<li><a href="#" {{bind-attr class="filterLink.isSelected:active"}} {{action "setFilter" filterGroup.actionName filterLink filterGroup.groupLabelText target=view}}>{{filterLink.text}}</a></li>
				{{/each}}
			</ul>
		</li>
	{{/each}}
</ul>
